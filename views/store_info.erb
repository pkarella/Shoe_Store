
<h1><%= @store.store_name() %></h1>

<h3>Select all brands that belong to this store:</h3>

<% if @brands.any?() %>
  <form action="/stores/<%= @store.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <form action="/stores/<%= @store.id() %>" method="post">
           <input name="_method" type="hidden" value="delete">
           <button type="submit">Delete Store</button>
     </form>
    <% @brands.each() do |brand| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="brand_ids[]" value="<%= brand.id() %>"><%= brand.shoe_name() %>
        </label>
      </div>
    <% end %>

    <button type="submit">Add brands</button>
  </form>
<% end %>

<% if @store.brands().any?() %>

  <h3>Here are all the brands in this store:</h3>

  <ul>
    <% @store.brands().each() do |brand| %>
      <li><%= brand.shoe_name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no brands yet! <a href="/brands">Add brands here</a></p>
<% end %>


<a href="/">Return to Main Page</a>
